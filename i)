public class Testmethode {
	
	int bestandzehn;
	int bestandfuenf;
	int bestandzwei;
	int bestandein;
	
	public Testmethode(int bestandzehn,int bestandfuenf,int bestandzwei,int bestandein)
	{
		this.bestandzehn = bestandzehn;
		this.bestandfuenf = bestandfuenf;
		this.bestandzwei = bestandzwei;
		this.bestandein = bestandein;
	}
	
	public boolean returnchange(int geldzurück,boolean wirklichzurückgeben)
	{
		int zwischenspeicher;
		int zehncent;
		int fuenfcent;
		int zweicent;
		
		if(geldzurück < 0)
		{
			System.out.print(" Restgeld nicht negativ");
			return false;
		}
		
		zwischenspeicher = geldzurück % 10;
		
		zehncent = (geldzurück-zwischenspeicher)/10;
		
		if(zehncent < bestandzehn)
		{
			geldzurück = geldzurück - (zehncent* 10);
		}
		else
		{
			geldzurück = geldzurück - (bestandzehn*10);
			zehncent = bestandzehn;
		}
		
		zwischenspeicher = geldzurück % 5;
		fuenfcent = (geldzurück-zwischenspeicher)/5;
		
		if(fuenfcent < bestandfuenf)
		{
			geldzurück = geldzurück - (fuenfcent* 5);
		}
		else
		{
			geldzurück = geldzurück - (bestandfuenf*5);
			fuenfcent = bestandfuenf;
		}
		
		zwischenspeicher = geldzurück % 2;
		zweicent = (geldzurück-zwischenspeicher)/2;
		
		if(zweicent < bestandzwei)
		{
			geldzurück = geldzurück - (zweicent* 2);
		}
		else
		{
			geldzurück = geldzurück - (bestandzwei*2);
			zweicent = bestandzwei;
		}
		
		
		if(bestandein >= geldzurück)
		{
			if(wirklichzurückgeben)
			{
				bestandzehn = bestandzehn - zehncent;
				bestandfuenf = bestandfuenf - fuenfcent;
				bestandzwei = bestandzwei - zweicent;
				bestandein = bestandein - geldzurück;
				return true;
			}
			else
			{
				return true;
			}
		}
		else
		{
			System.out.println("kann nicht passend zurückgeben");
			return false;
		}
	}
	

}
