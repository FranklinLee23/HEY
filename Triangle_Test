public class Triangle_Test
{
	public static void main(String [] args)
	{
		int x = In.readInt();

			Triangle_new t = new Triangle_new(x);
			while(x <= 0 || x % 2 == 0)
			{
				x = In.readInt();
				t = new Triangle_new(x);
			}

			t.display_triangle();
			System.out.println();
			System.out.println("Anzahl der Sterne: " + t.get_stars());
			System.out.println("Anzahl der Punkte: " + t.get_dots());
			t.display_tree();
			System.out.println();
			
			System.out.println("Ändern der Länge von Triangle");
			int y = In.readInt();
			
			t.set_length(y);
			t.display_triangle();
			System.out.println();
			System.out.println("Anzahl der Sterne: " + t.get_stars());
			System.out.println("Anzahl der Punkte: " + t.get_dots());
			t.display_tree();
		}
}
